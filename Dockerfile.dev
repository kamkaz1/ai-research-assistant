# Development Dockerfile for local development
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    nginx \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install Node.js for frontend development
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs

# Copy backend requirements and install
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend source
COPY backend/ ./backend/

# Copy frontend files
COPY frontend/ ./frontend/

# Install frontend dependencies
WORKDIR /app/frontend
RUN npm install
WORKDIR /app

# Copy nginx configuration
COPY frontend/nginx.conf /etc/nginx/sites-available/default

# Create development startup script
RUN echo '#!/bin/bash\n\
echo "Starting CerebroGPT in development mode..."\n\
echo "Backend will be available at http://localhost:5000"\n\
echo "Frontend will be available at http://localhost:80"\n\
\n\
# Start nginx\n\
service nginx start\n\
\n\
# Start backend in development mode\n\
cd /app/backend\n\
python app.py &\n\
\n\
# Keep container running\n\
tail -f /dev/null' > /start-dev.sh && chmod +x /start-dev.sh

# Expose ports
EXPOSE 80 5000

# Start development services
CMD ["/start-dev.sh"]
